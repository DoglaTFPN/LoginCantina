<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayapp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/imgDoce"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:src="@drawable/brigadeiro" />


        <RelativeLayout
            android:id="@+id/txtLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/imgDoce"
            android:orientation="vertical"
            android:gravity="center|left"
            >

            <TextView
                android:id="@+id/NomeDoce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brigadeiro"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/DescDoce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/NomeDoce"
                android:text="Tradicional"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/precoDoce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DescDoce"
                android:text="PreÃ§o"

                android:textSize="16sp"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>